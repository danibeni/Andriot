<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">


    <ImageView
        android:id="@+id/iv_dev_feature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_termometer" />

    <TextView
        android:id="@+id/tv_device_feature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_toRightOf="@+id/iv_dev_feature"
        android:textAppearance="?attr/textAppearanceListItem" />

    <Button
        android:id="@+id/btn_add_device_feature"
        style="@style/DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/tv_device_feature_name"
        android:drawableLeft="@drawable/ic_add_dev_feature"
        android:drawablePadding="2dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="@string/add" />
</RelativeLayout>

